{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types"]
}
